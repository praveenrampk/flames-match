{
    "compilerOptions": {
      "target": "ES2019",                          
      "module": "CommonJS",                        
      "declaration": true,                         
      "outDir": "./dist",                          
      "strict": true,                              
      "esModuleInterop": true,                     
      "forceConsistentCasingInFileNames": true,    
      "skipLibCheck": true,                        
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "cli.ts"],
    "exclude": ["node_modules", "tests", "dist"]
  }
  